<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clocharts.oondeecee.MainActivity"
    android:keepScreenOn="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainGridRL"
        android:layout_alignRight="@+id/mainGridRL"
        android:layout_marginBottom="10dp"
        android:onClick="resetGrid"
        android:text="reset"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainGridRL"
        android:layout_alignLeft="@+id/mainGridRL"
        android:layout_marginBottom="10dp"
        android:onClick="forzaMossa"
        android:text="AI move"/>
    <RelativeLayout
        android:id="@+id/mainGridRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TableLayout
            android:id="@+id/gridTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#535353"
            />
    </RelativeLayout>

</RelativeLayout>
